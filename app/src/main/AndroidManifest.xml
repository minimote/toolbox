    <application
        android:name=".ToolboxApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_toolbox"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_toolbox"
        android:supportsRtl="true"
        android:theme="@style/Theme.Toolbox.Dark"
        tools:targetApi="tiramisu">
        <!--        <activity-->
        <!--            android:name=".SplashActivity"-->
        <!--            android:exported="true"-->
        <!--            android:theme="@style/Theme.Toolbox.Splash">-->
        <!--            <intent-filter>-->
        <!--                <action android:name="android.intent.action.MAIN" />-->
        <!--                <category android:name="android.intent.category.LAUNCHER" />-->
        <!--            </intent-filter>-->
        <!--        </activity>-->

        <activity
            android:name=".activity.MainActivity"
            android:configChanges="colorMode|density|fontScale|keyboard|keyboardHidden|layoutDirection|locale|mcc|mnc|navigation|orientation|screenLayout|screenSize|smallestScreenSize|touchscreen|uiMode"
            android:exported="true"
            android:launchMode="singleTask"
            android:noHistory="true">
            <!-- android:excludeFromRecents="true" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".helper.TimeWidget"
            android:label="@string/widgetName_time_and_date"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/time_widget_info" />
        </receiver>

        <service
            android:name=".helper.TimeService"
            android:foregroundServiceType="dataSync"
            android:enabled="true"
            android:exported="false" />

    </application>


</manifest>

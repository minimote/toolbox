<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外部背景颜色 -->
    <item>
        <shape>
            <solid android:color="@color/black" />
            <corners
                android:bottomLeftRadius="0px"
                android:bottomRightRadius="0px"
                android:topLeftRadius="@dimen/layout_size_1_small"
                android:topRightRadius="@dimen/layout_size_1_small" />
        </shape>
    </item>

    <!-- 左侧渐变层 -->
    <item android:gravity="start">
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent"
                android:startColor="@color/deep_gray"
                android:type="linear" />
            <corners android:topLeftRadius="@dimen/layout_size_1_small" />
            <size android:width="@dimen/layout_size_1_large" />
        </shape>
    </item>

    <!-- 右侧渐变层 -->
    <item android:gravity="end">
        <shape>
            <gradient
                android:angle="180"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent"
                android:startColor="@color/deep_gray"
                android:type="linear" />
            <corners android:topRightRadius="@dimen/layout_size_1_small" />
            <size android:width="@dimen/layout_size_1_large" />
        </shape>
    </item>

    <!-- 上侧渐变层 -->
    <item android:gravity="top">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent"
                android:startColor="@color/deep_gray"
                android:type="linear" />
            <corners
                android:topLeftRadius="@dimen/layout_size_1_small"
                android:topRightRadius="@dimen/layout_size_1_small" />
            <size android:height="@dimen/layout_size_1_large" />
        </shape>
    </item>


<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外部背景颜色 -->
    <item>
        <shape>
            <solid android:color="@color/black" />
            <corners android:radius="@dimen/layout_radius_size" />
        </shape>
    </item>

    <!-- 左侧渐变层 -->
    <item android:gravity="start">
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent"
                android:startColor="@color/deep_gray"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="@dimen/layout_radius_size"
                android:topLeftRadius="@dimen/layout_radius_size" />
            <size android:width="@dimen/layout_shadow_width" />
        </shape>
    </item>

    <!-- 右侧渐变层 -->
    <item android:gravity="end">
        <shape>
            <gradient
                android:angle="180"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent"
                android:startColor="@color/deep_gray"
                android:type="linear" />
            <corners
                android:bottomRightRadius="@dimen/layout_radius_size"
                android:topRightRadius="@dimen/layout_radius_size" />
            <size android:width="@dimen/layout_shadow_width" />
        </shape>
    </item>

    <!-- 上侧渐变层 -->
    <item android:gravity="top">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent"
                android:startColor="@color/deep_gray"
                android:type="linear" />
            <corners
                android:topLeftRadius="@dimen/layout_radius_size"
                android:topRightRadius="@dimen/layout_radius_size" />
            <size android:height="@dimen/layout_shadow_width" />
        </shape>
    </item>

    <!-- 下侧渐变层 -->
    <item android:gravity="bottom">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent"
                android:startColor="@color/deep_gray"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="@dimen/layout_radius_size"
                android:bottomRightRadius="@dimen/layout_radius_size" />
            <size android:height="@dimen/layout_shadow_width" />
        </shape>
    </item>


    <!-- Ripple 效果 -->
    <item>
        <ripple android:color="?attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/layout_radius_size" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>

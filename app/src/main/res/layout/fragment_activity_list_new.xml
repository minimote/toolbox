<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.RecyclerView.Dark">

    <EditText
        android:id="@+id/editText_searchBox"
        style="@style/EditText.Toolbox.Dark"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/layout_size_3_script"
        android:autofillHints=""
        android:hint="@string/hint_search_activities"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_activity_list"
        app:layout_constraintEnd_toStartOf="@id/button_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_cancel"
        style="@style/Button.Toolbox.Dark"
        android:layout_width="@dimen/layout_size_2_Large"
        android:text="@string/cancel"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_activity_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editText_searchBox"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <com.heytap.wearable.support.recycler.widget.RecyclerView-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_activity_list"
        style="@style/RecyclerView.Toolbox.Dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_searchBox" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/ProgressBar.Toolbox.Dark"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView_loading"
        style="@style/TextView.Toolbox.LoadingText.Dark"
        android:text="@string/loading_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />



    <include
        android:id="@+id/include_shadow_constraintLayout_recyclerView"
        style="@style/IncludeConstraintLayout.Toolbox.RecyclerView.Dark"
        layout="@layout/layout_shadow_constraintlayout_recyclerview"
        android:layout_marginTop="@dimen/layout_size_3_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout_searchBox"
        tools:ignore="IncludeLayoutParam" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_searchBox"
        style="@style/ConstraintLayout.Toolbox.Dark"
        android:layout_marginHorizontal="@dimen/layout_size_fragment_gapSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText_searchBox"
            style="@style/EditText.Toolbox.Dark"
            android:layout_width="0dp"
            android:autofillHints=""
            android:layout_marginHorizontal="@dimen/layout_size_3_small"
            android:hint="@string/hint_search_activities"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@id/button_negative"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton_clear"
            style="@style/ImageButton.Toolbox.ClearEditText.Dark"
            android:contentDescription="@string/clear_button"
            app:layout_constraintBottom_toBottomOf="@id/editText_searchBox"
            app:layout_constraintEnd_toEndOf="@id/editText_searchBox"
            app:layout_constraintTop_toTopOf="@id/editText_searchBox" />

        <Button
            android:id="@+id/button_negative"
            style="@style/Button.Toolbox.Dark"
            android:layout_width="@dimen/layout_size_2_large"
            android:layout_height="0dp"
            android:text="@string/cancel"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/editText_searchBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/editText_searchBox"
            app:layout_constraintTop_toTopOf="@id/editText_searchBox" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/ProgressBar.Toolbox.Dark"
        app:layout_constraintBottom_toTopOf="@+id/textView_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/textView_loading"
        style="@style/TextView.Toolbox.LoadingText.Dark"
        android:text="@string/loading_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar" />


    <!-- 背景图片和文字 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout_searchBox">

        <ImageView
            android:id="@+id/imageView_background"
            style="@style/ImageView.Toolbox.EditBackground.Dark"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toTopOf="@id/textView_searchMode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView_searchMode"
            style="@style/TextView.Toolbox.Dark"
            android:layout_width="match_parent"
            android:padding="@dimen/layout_size_2_small"
            android:text="@string/search_mode"
            android:textSize="@dimen/text_size_4_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

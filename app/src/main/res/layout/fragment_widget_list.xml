<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_widget_list"
    style="@style/ConstraintLayout.Toolbox.RecyclerView.Dark">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        style="@style/SmartRefreshLayout.Toolbox.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_widget_list"
            style="@style/RecyclerView.Toolbox.Dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/background_ripple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/edit_background"
        style="@style/ImageView.Toolbox.EditBackground.Dark"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_setting"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/textView_no_widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_no_widget"
        style="@style/TextView.Toolbox.Dark"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/layout_size_2.5_Large"
        android:paddingBottom="@dimen/layout_size_1_large"
        android:paddingHorizontal="@dimen/layout_size_2_footnote"
        android:text="@string/textView_no_widget"
        android:textSize="@dimen/text_size_3_LARGE"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_background" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    </com.scwang.smart.refresh.layout.SmartRefreshLayout>-->

</androidx.constraintlayout.widget.ConstraintLayout>

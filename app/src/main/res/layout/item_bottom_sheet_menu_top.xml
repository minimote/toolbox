<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.Dark"
    android:layout_marginHorizontal="0px"
    android:background="@color/transparent"
    android:clickable="true">

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_size_3_small"
        android:layout_marginVertical="@dimen/layout_size_2_small"
        android:background="@drawable/background_bottom_sheet_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="@dimen/layout_size_bottom_sheet_top_width_ratio" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.Dark">

    <View
        android:id="@+id/point"
        style="@style/View.Toolbox.Circle.NameLeft.Dark"
        app:layout_constraintBottom_toBottomOf="@id/textView_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_name" />

    <TextView
        android:id="@+id/textView_name"
        style="@style/TextView.Toolbox.EditName.Dark"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/layout_size_3_small"
        android:layout_marginStart="@dimen/layout_size_2_small"
        android:text="@string/textView_package_name"
        app:layout_constraintStart_toEndOf="@id/point"
        app:layout_constraintTop_toTopOf="parent" />


    <!--    <View-->
    <!--        android:layout_width="0px"-->
    <!--        android:layout_height="2dp"-->
    <!--        android:background="@color/mid_gray_trans"-->
    <!--        app:layout_constraintBottom_toTopOf="@id/textView_content"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toEndOf="@id/textView_name"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:id="@+id/textView_content"
        style="@style/TextView.Toolbox.EditContent.Dark"
        android:text="@string/package_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_name" />

</androidx.constraintlayout.widget.ConstraintLayout>

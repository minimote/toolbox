<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.Dark">

    <TextView
        android:id="@+id/textView_clearData"
        style="@style/TextView.Toolbox.EditOperateName.Dark"
        android:text="@string/widgetName"
        app:layout_constraintBottom_toTopOf="@id/textView_nickName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_reset_nickName"
        style="@style/Button.Toolbox.Reset.Dark"
        app:layout_constraintBottom_toTopOf="@id/textView_nickName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_clearData"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView_nickName"
        style="@style/EditText.Toolbox.Dark"
        android:layout_marginHorizontal="@dimen/layout_size_3_script"
        android:autofillHints=""
        android:hint="@string/can_be_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_clear"
        style="@style/ImageButton.Toolbox.ClearEditText.Dark"
        android:contentDescription="@string/clear_button"
        app:layout_constraintBottom_toBottomOf="@id/textView_nickName"
        app:layout_constraintEnd_toEndOf="@id/textView_nickName"
        app:layout_constraintTop_toTopOf="@id/textView_nickName" />

</androidx.constraintlayout.widget.ConstraintLayout>

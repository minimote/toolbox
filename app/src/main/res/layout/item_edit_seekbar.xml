<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.Dark">

    <View
        android:id="@+id/point"
        style="@style/View.Toolbox.Circle.NameLeft.Dark"
        app:layout_constraintBottom_toBottomOf="@id/textView_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_name" />

    <TextView
        android:id="@+id/textView_name"
        style="@style/TextView.Toolbox.EditName.Dark"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/layout_size_2_footnote"
        android:gravity="start"
        android:text="@string/widgetSize"
        app:layout_constraintBottom_toTopOf="@id/seekBar"
        app:layout_constraintStart_toEndOf="@id/point"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_content"
        style="@style/TextView.Toolbox.EditContent.Dark"
        android:gravity="center"
        android:text="@string/widgetSize_fraction"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_0_normal"
        app:layout_constraintBottom_toTopOf="@id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_name"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/SeekBar.Toolbox.Dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.Dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clickable_container"
        style="@style/ConstraintLayout.Toolbox.Clickable.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_text"
            style="@style/TextView.Toolbox.CheckUpdate.Dark"
            android:text="@string/check_update"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 不可点击的底部空白区域 -->
    <View
        android:id="@+id/bottom_space"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_size_1_large"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clickable_container" />

</androidx.constraintlayout.widget.ConstraintLayout>

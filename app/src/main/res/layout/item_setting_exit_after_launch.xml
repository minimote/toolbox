<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.Clickable.Dark">

    <View
        android:id="@+id/point"
        style="@style/View.Toolbox.Circle.NameLeft.Dark"
        app:layout_constraintBottom_toBottomOf="@id/textView_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_name" />

    <TextView
        android:id="@+id/textView_name"
        style="@style/TextView.Toolbox.Setting1.Dark"
        android:layout_width="0px"
        android:layout_marginVertical="@dimen/layout_size_2_footnote"
        android:layout_marginStart="@dimen/layout_size_2_footnote"
        android:text="@string/exit_after_launch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/switch_"
        app:layout_constraintStart_toEndOf="@id/point"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_"
        style="@style/Switch.Toolbox.Dark"
        android:contentDescription="@string/exit_after_launch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView_name"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

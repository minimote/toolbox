<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.Widget.Dark"
    android:background="@drawable/background_widget_full"
    android:clickable="false">

    <ImageView
        android:id="@+id/group_indicator"
        android:layout_width="@dimen/layout_size_1_small"
        android:layout_height="@dimen/layout_size_1_small"
        android:layout_margin="@dimen/layout_size_1_small"
        android:background="@color/transparent"
        android:contentDescription="@string/group_indicator"
        android:src="@drawable/group_indicator_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_name"
        style="@style/TextView.Toolbox.Dark"
        android:layout_width="0dp"
        android:layout_margin="@dimen/layout_size_2_footnote"
        android:gravity="start"
        android:paddingStart="@dimen/layout_size_2_footnote"
        android:paddingEnd="0px"
        android:text="@string/add_local_app"
        android:textSize="@dimen/text_size_1_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/group_indicator"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

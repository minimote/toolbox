<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout_add_app"
    style="@style/ConstraintLayout.Toolbox.Clickable.Dark"
    android:layout_marginBottom="@dimen/layout_size_4_small"
    android:background="@drawable/background_widget_full"
    android:paddingHorizontal="@dimen/layout_size_1_small"
    android:paddingVertical="@dimen/layout_size_toolTile_vertical_padding">

    <ImageView
        android:id="@+id/group_indicator"
        android:layout_width="@dimen/layout_size_1_small"
        android:layout_height="@dimen/layout_size_1_small"
        android:layout_marginVertical="@dimen/layout_size_2_5_small"
        android:background="@color/transparent"
        android:contentDescription="@string/group_indicator"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_name"
        style="@style/TextView.Toolbox.Dark"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/layout_size_1_5_small"
        android:layout_marginEnd="0dp"
        android:gravity="start"
        android:padding="0px"
        android:text="@string/add_local_app"
        android:textSize="@dimen/text_size_1_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/group_indicator"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout><!--<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->

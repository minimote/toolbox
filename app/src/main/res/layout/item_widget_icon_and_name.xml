<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.Widget.Dark">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingHorizontal="@dimen/layout_size_2_footnote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_app_icon"
            style="@style/ImageView.Toolbox.WidgetIcon.Dark"
            android:contentDescription="@string/widget_icon"
            android:src="@drawable/ic_default" />

        <TextView
            android:id="@+id/textView_app_name"
            style="@style/TextView.Toolbox.WidgetName.Dark"
            android:layout_width="wrap_content" />

    </LinearLayout>


    <View
        android:id="@+id/view_background"
        android:layout_width="0px"
        android:layout_height="0px"
        android:background="@drawable/background_widget_select"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintLayout.Toolbox.Widget.Dark"
    android:layout_marginHorizontal="@dimen/layout_size_4_small"
    android:padding="0dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingHorizontal="@dimen/layout_size_2_small"
        android:paddingVertical="@dimen/layout_size_3_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/ConstraintLayout.Toolbox.Dark"
            android:layout_width="wrap_content"
            android:background="@color/transparent">


            <ImageView
                android:id="@+id/imageView_app_icon"
                style="@style/ImageView.Toolbox.AppIcon.Dark"
                android:layout_marginEnd="@dimen/layout_size_2_5_small"
                android:contentDescription="@string/widget_icon"
                android:src="@drawable/ic_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/ProgressBar.Icon.Toolbox.Dark"
                app:layout_constraintBottom_toBottomOf="@id/imageView_app_icon"
                app:layout_constraintEnd_toEndOf="@id/imageView_app_icon"
                app:layout_constraintStart_toStartOf="@id/imageView_app_icon"
                app:layout_constraintTop_toTopOf="@id/imageView_app_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textView_app_name"
            style="@style/TextView.Toolbox.WidgetName.Dark"
            android:layout_width="wrap_content"
            android:padding="0dp" />

    </LinearLayout>


    <View
        android:id="@+id/view_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/background_widget_select"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

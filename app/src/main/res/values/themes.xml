<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.toolbox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <!--        <item name="android:background">@color/black</item>-->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.toolbox.smallFont" parent="Theme.toolbox">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button.Dark" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:inset">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Background.Widget" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="android:background">@color/deep_gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">64dp</item>
    </style>

    <style name="TextView.Dark" parent="Theme.toolbox">
        <!--        <item name="android:textSize">18sp</item>-->
        <item name="android:background">@color/black</item>
    </style>

    <style name="ImageButton.Dark" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/black</item>
        <item name="android:inset">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ConstraintLayout.RecyclerView.Dark" parent="Theme.toolbox">
        <!--        <item name="android:padding">4dp</item>-->
    </style>

    <style name="Theme.Toolbox.Splash" parent="Theme.toolbox">
        <item name="android:windowBackground">@color/black</item>
    </style>


</resources>
